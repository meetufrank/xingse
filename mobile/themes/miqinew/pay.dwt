 <script type="text/javascript">

    //确认支付
   $('.payput').click(function(){
        var pay_id=$("input[name='pay_list']:checked").val();//备用
        var content ='';
        var orderid='{$order.order_id}';
        var type='{$is_wechat}';
            if(type==false){


            $.ajax({
            type:"POST",
            url:"flow.php",
            data:{step:'update_order_pay',pay_list:pay_id,order_id:orderid},
            dataType:'json',
            success: function(data){
                 if(data.error==12){
                         window.location.href=data.url;
                         return;
                    }
                if(data.step==1){
                    content=data.content;
                    layer.open({
                        content:content,
                        btn: ['关闭'],
                        style:'width:190px;'
                      });
                    getProgress();
                }
                }
            });
          }else{
            window.location.href='weixin/example/jsapi.php';
          }


      });


 getProgress = function(){
     $.ajax({
         type:"POST",
         url:"getdata.php",
         dataType:"text",
         data:{orderid:'{$order.order_id}'},
         timeout:10*60*1000,  //设置10分钟超时
         success:function(data){
             data = (new Function("return "+data))();
             if(data.step == 1){

                 getProgress();

             }  else if(data.step == 3){

                window.location.href="flow.php?step=pay_success{$linestring2}";
             }
         },
        error:function(){
            alert('支付超时');
         }
     });
 }




